<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        tools:ignore="UselessParent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/version"
            android:textSize="24sp"
            android:textAlignment="viewStart"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/spinner_border_white"
            tools:ignore="RtlSymmetry"
            android:includeFontPadding="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/btn_widget_on"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위젯 활성화 설정"
            android:textSize="24sp"
            android:textAlignment="viewStart"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/spinner_border_white"
            tools:ignore="RtlSymmetry,UseSwitchCompatOrMaterialXml" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Switch
            android:id="@+id/switch_detect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사고 진동 감지 기능"
            android:textSize="24sp"
            android:textAlignment="viewStart"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/spinner_border_white"
            android:includeFontPadding="false"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Switch
            android:id="@+id/switch_detect_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" (테스트 버튼) 강제 진동"
            android:textSize="24sp"
            android:textAlignment="viewStart"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/spinner_border_white"
            tools:ignore="RtlSymmetry,UseSwitchCompatOrMaterialXml"
            android:includeFontPadding="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/btn_alarm_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" (테스트 버튼) 알람"
            android:textSize="24sp"
            android:textAlignment="viewStart"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/spinner_border_white"
            tools:ignore="RtlSymmetry"
            android:includeFontPadding="false" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <Button
            android:id="@+id/btn_key_test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" (테스트 버튼) 키 발급"
            android:textSize="24sp"
            android:textAlignment="viewStart"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/spinner_border_white"
            tools:ignore="RtlSymmetry"
            android:includeFontPadding="false" />

    </LinearLayout>

</LinearLayout>






