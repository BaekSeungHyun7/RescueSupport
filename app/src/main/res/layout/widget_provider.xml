<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.RescueSupport.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.RescueSupport.AppWidgetContainer"
    android:background="@android:color/transparent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp">
        <ImageButton
            android:id="@+id/btn_emergency_call"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/circle_btn"
            android:src="@drawable/ic_call_resize_widget" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="119 연결"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp">
        <ImageButton
            android:id="@+id/btn_sendmessage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/circle_btn"
            android:src="@drawable/ic_message_resize_widget" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="긴급 정보 발송"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp">
        <ImageButton
            android:id="@+id/btn2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/circle_btn"
            android:src="@drawable/ic_undo_resize_widget"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="진동 감지 취소"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</LinearLayout>